<h1 align="center">Listing all articles</h1>

<% @articles.each do |chaquearticle| %>
  <div class="row">
    <div class="col-xs-8 col-xs-offset-2">
      <div class="well well-lg">
        <div class="article-title">
          <%= link_to chaquearticle.title, article_path(chaquearticle) %>
        </div>
        <div class="article-body">
          <%= truncate(chaquearticle.description, length: 100) %>
        </div>
        <div class="article-actions">
          <%= link_to "Edit this article", edit_article_path(chaquearticle), class: "btn btn-xs btn-primary" %>
          <%= link_to "Delete this article", article_path(chaquearticle), method: :delete, 
                                                data: { confirm: "Are you sure? "}, 
                                                class: "btn btn-xs btn-danger" %>
        </div>
      </div>
    </div>
  </div>
<% end %>
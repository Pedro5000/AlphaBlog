<h1>Listing all articles</h1>
<h2>
<%= link_to "Create new article", new_article_path %>
</h2>
<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
  </tr>

  <% @articles.each do |chaquearticle| %>
  <tr>
    <td><%= chaquearticle.title %></td>
    <td><%= chaquearticle.description %></td>
    <td><%= link_to "Edit", edit_article_path(chaquearticle) %></td>
    <td><%= link_to "Show", article_path(chaquearticle) %></td>
    <td><%= link_to "Delete", article_path(chaquearticle), method: :delete, data: {confirm: "Are you sure?"} %></td>
  </tr>
  <% end %>
</table>
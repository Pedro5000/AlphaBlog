<% obj.each do |chaquearticle| %>
  <div class="row">
    <div class="col-xs-8 col-xs-offset-2">
      <div class="well well-lg">
        <div class="article-title">
          <%= link_to chaquearticle.title, article_path(chaquearticle) %>
        </div>
        <div class="article-body">
          <%= truncate(chaquearticle.description, length: 100) %>
          <div class="article-meta-details">
          <small>Created by: <%= chaquearticle.user.username %>, <%= time_ago_in_words(chaquearticle.created_at) %> ago, last updated: <%= time_ago_in_words(chaquearticle.updated_at) %> ago.</small>
          </div>
        </div>
        <% if logged_in? && current_user == chaquearticle.user %>
          <div class="article-actions">
            <%= link_to "Edit this article", edit_article_path(chaquearticle), class: "btn btn-xs btn-primary" %>
            <%= link_to "Delete this article", article_path(chaquearticle), method: :delete, 
                                                  data: { confirm: "Are you sure? "}, 
                                                  class: "btn btn-xs btn-danger" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
<% end %>